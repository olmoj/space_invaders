CC	= gcc

NAME	= space_invaders

SRC	= main.c

OBJ	= $(SRC:%.c=%.o)

INC	= ./

RM	= rm -f

CFLAGS	= -ansi -pedantic -W -Wall -I $(INC)

LDFLAGS = -lSDL2 -lSDL_image

$(NAME) :	$(OBJ)
		$(CC) $(OBJ) -o $(NAME) $(CFLAGS) $(LDFLAGS)

all :		$(NAME)

clean :
		$(RM) $(OBJ)

fclean : 	clean
		$(RM) $(NAME)

re : 		fclean all
